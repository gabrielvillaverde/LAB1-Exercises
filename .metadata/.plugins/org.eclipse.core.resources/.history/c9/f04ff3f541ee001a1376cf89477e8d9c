#include <stdio.h>
#include <stdlib.h>

// Prototipo de funciones
int utn_getNumero(int * pResultado)

// Función principal
int main(void) {

	setbuf(stdout,NULL);

	int numero;

	utn_getNumero(&numero); // Llamo a la función getNumero.

	return EXIT_SUCCESS;
}


// Función utn_getNumero
int utn_getNumero(int * pResultado) {

	int numeroIngresado;
	printf("Ingrese un numero:");

	scanf("%d",&numeroIngresado);
	if(numeroIngresado >= && numeroIngresado < 100){
		*pResultado = numeroIngresado;
	}
	else
		printf("Error.");
}
