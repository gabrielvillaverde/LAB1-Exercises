#include <stdio.h>
#include <stdlib.h>

// Función principal
int main(void) {

	int numero;

	utn_getNumero(&numero); // Llamo a la función getNumero.

	return EXIT_SUCCESS;
}


// Función utn_getNumero
int utn_getNumero(int * pResultado) {

	int numero;
	printf("Ingrese un numero:");

	scanf("%d",&numero);
	if(numero >= && numero <= 100){
		*pResultado = numero;
	}
	else
		printf("Error.");

	return EXIT_SUCCESS;
}
