/*
 ============================================================================
Pedir al usuario dos números float:

- Sumar
- Restar
- Multiplicar
- Dividir

Si no hubo errores, imprimir el resultado: "La suma es...".
Todas las funciones hay que hacer que si salieron bien:

- return = 0
- return = -1

 ============================================================================
 */

#include <stdio.h>
#include <stdlib.h>


float Suma(float numeroA, float numeroB, float *resultado);
float Resta(float numeroA, float numeroB, float *resultado);
float Division(float numeroA, float numeroB, float *resultado);
float Multiplicacion(float numeroA, float numeroB, float *resultado);

int main(void){

	setbuf(stdout,NULL);


	float numero1;
	float numero2;
	char funcion;
	float resultado;
	int respuestaScanF;

	printf("Bienvenido a calculadora Basica, ingrese que funcion quiere ejecutar (+|-|*|/):");
	fflush(stdin);
	scanf("%c",&funcion);

	while(funcion != '+' && funcion != '-' && funcion != '/' && funcion != '*' ){

		printf("ingrese una funcion valida (+|-|*|/):");
		fflush(stdin);
		scanf("%c",&funcion);


	}

	printf("Ingrese su primer numero");
	fflush(stdin);
	respuestaScanF = scanf("%f",&numero1);

    while(respuestaScanF != 1){

		printf("porfavor ingrese un caracter numerico");
		fflush(stdin);
		respuestaScanF = scanf("%f",&numero1);

	}


	printf("Ingrese su segundo numero");
	fflush(stdin);
	scanf("%f",&numero2);
	respuestaScanF = scanf("%f",&numero2);

	while(respuestaScanF != 1){

		printf("porfavor ingrese un caracter numerico");
		fflush(stdin);
		respuestaScanF = scanf("%f",&numero2);

		}

	switch(funcion){

	 case'+':

		 Suma(numero1, numero2,&resultado);
		 break;

	 case'-':

			 Resta(numero1, numero2,&resultado);
			 break;

	 case'/':

			 Division(numero1, numero2,&resultado);
			 break;

	 default:

			 Multiplicacion(numero1, numero2,&resultado);
			 break;
	}

	printf("El resultado es : %.2f",resultado);
}


float Suma(float numeroA, float numeroB, float *resultado){

	*resultado = numeroA + numeroB;

	return 0;

}

float Resta(float numeroA, float numeroB, float *resultado){

	*resultado = numeroA - numeroB;

	return 0;

}

float Division(float numeroA, float numeroB, float *resultado){


	*resultado = numeroA / numeroB;

	return 0;

}

float Multiplicacion(float numeroA, float numeroB, float *resultado){

    int error=-1;

    if(numeroB!= 0.0){

    	*resultado = numeroA * numeroB;

    	error = 0;

    }

	return error;

}
