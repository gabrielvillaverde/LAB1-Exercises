/*
 ============================================================================
Una función que tenga dos parámetros y sume dos números y devuelva el resultado.
La otra función que tenga tres parámetros, un parámetro para guardar resultados y dos que son los números para sumar.
 ============================================================================
 */

#include <stdio.h>
#include <stdlib.h>

int funcionSumar(int parametroUno, int parametroDos);

int main(void) {

	setbuf(stdout,NULL); // Para que la consola no imprima todo de una.

	int numeroIngresadoUno;
	int numeroIngresadoDos;
	int resultado;
	int resultadoDos; // Para la segundaFuncionSumar

	printf("Ingrese el primer número:\n");
	scanf("%d",&numeroIngresadoUno);

	printf("Ingrese el segundo número:\n");
	scanf("%d",&numeroIngresadoDos);

	resultado = funcionSumar(numeroIngresadoUno, numeroIngresadoDos);
	printf("El resultado es: %d\n", resultado);

	segundaFuncionSumar(numeroIngresadoUno, numeroIngresadoDos, resultadoDos);
	printf("El resultado Dos es: %d\n", resultadoDos);


	return EXIT_SUCCESS;
}

int funcionSumar(int parametroUno, int parametroDos){

	int resultado = parametroUno + parametroDos;

	return resultado;
}

int segundaFuncionSumar(int parametroUno, int parametroDos, int resultado){

	resultado = parametroUno + parametroDos;

	return resultado;
}
