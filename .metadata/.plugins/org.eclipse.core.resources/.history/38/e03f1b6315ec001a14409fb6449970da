/*
 ============================================================================
 Pedir dos números y sumarlos.
 ============================================================================
 */

#include <stdio.h>
#include <stdlib.h>

int main(void) {

	setbuf(stdout,NULL); // Solo en Windows

	int num1;
	int num2;
	int num3;
	char resultado;

	printf("Ingrese un número\n");
	scanf("%d", &num1);

	printf("Ingrese otro número\n");
	scanf("%d", &num2);

	suma = num1 + num2;

	printf("La suma es %d", suma);
	return EXIT_SUCCESS;
}
